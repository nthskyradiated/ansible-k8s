#cloud-config
hostname: {{ item[1].name }}
fqdn: {{ item[1].name }}.local

users:
  - default
  - name: vagrant
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false
    plain_text_passwd: vagrant
    ssh_authorized_keys:
      - ssh-rsa  vagrant insecure public key

ssh_pwauth: true
disable_root: false

package_update: true
packages:
  - openssh-server

write_files:
  - path: /etc/netplan/01-netcfg.yaml
    permissions: '0644'
    content: |
      network:
        version: 2
        ethernets:
          ens3:
            addresses: [{{ item[1].ip }}/24]
            gateway4: 192.168.100.1
            nameservers:
              addresses: [8.8.8.8]

runcmd:
  - netplan generate
  - netplan apply
  - systemctl enable ssh
  - systemctl start ssh
